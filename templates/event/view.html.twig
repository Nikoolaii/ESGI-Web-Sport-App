{% extends 'base.html.twig' %}

{% block title %}Event details{% endblock %}

{% block body %}
    <h1>Event</h1>
    <h2>{{ event.name }}</h2>
    <h3>Latitude: {{ event.latitude }}</h3>
    <h3>Longitude: {{ event.longitude }}</h3>
    <h3>Date: {{ event.date|date('Y-m-d') }}</h3>
    <hr/>
    <h2>Participants</h2>
    <a href="{{ path('app_add_participant', {id: event.id}) }}">Add Participant</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Distance</th>
            </tr>
        </thead>
        <tbody>
            {% for participant in event.participants %}
                <tr>
                    <td>{{ participant.name }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.latitude }}</td>
                    <td>{{ participant.longitude }}</td>
                    <td><a href="{{ path('app_event_distance', {id: event.id, lat: participant.latitude, long: participant.longitude}) }}">Distance</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
{% endblock %}
